{
  "compilerOptions": {
    "rootDir": "./src" /* Specify the root folder within your source files. */,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": false

  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./dist"
  ]
}